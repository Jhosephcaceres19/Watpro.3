---
import "../../src/styles/global.css";
---

<header class="bg-[#0B6E99] text-white shadow-md sticky top-0 z-50">
  <div class="container mx-auto flex justify-between items-center h-20 px-3">
    <!-- Logo -->
    <a href="#" class="flex items-center w-[150px] max-[400px]:w-[110px]">
      <img
        src="https://res.cloudinary.com/dcyr5qkhg/image/upload/v1735056704/watproportada2-removebg-preview_zqzpni.png"
        alt=""
      />
    </a>

    <!-- NAV DESKTOP -->
    <ul class="hidden md:flex space-x-6 font-medium">
      <li>
        <a
          href="#"
          class="hover:text-blue-700 hover:font-semibold hover:border-b-2 hover:border-blue-700 hover:pb-1 transition"
          >¿Quiénes somos?</a
        >
      </li>
      <li>
        <a
          href="#"
          class="hover:text-blue-700 hover:font-semibold hover:border-b-2 hover:border-blue-700 hover:pb-1 transition"
          >Servicios</a
        >
      </li>
      <li>
        <a
          href="#"
          class="hover:text-blue-700 hover:font-semibold hover:border-b-2 hover:border-blue-700 hover:pb-1 transition"
          >WATPRO informa</a
        >
      </li>
      <li>
        <a
          href="#"
          class="hover:text-blue-700 hover:font-semibold hover:border-b-2 hover:border-blue-700 hover:pb-1 transition"
          >Atención al público</a
        >
      </li>
      <li>
        <a
          href="#"
          class="hover:text-blue-700 hover:font-semibold hover:border-b-2 hover:border-blue-700 hover:pb-1 transition"
          >Contacto</a
        >
      </li>
    </ul>

    <!-- BOTÓN HAMBURGUESA -->
    <button
      id="btnMenu"
      class="md:hidden flex flex-col justify-center items-center space-y-1 max-[400px]:scale-90"
    >
      <span class="block w-6 h-[3px] bg-gray-800 rounded transition-all"></span>
      <span class="block w-6 h-[3px] bg-gray-800 rounded transition-all"></span>
      <span class="block w-6 h-[3px] bg-gray-800 rounded transition-all"></span>
    </button>
  </div>

  <!-- MENU MOBILE -->
  <div
    id="menu"
    class="hidden w-full flex-col bg-sky-200 text-gray-800 px-6 py-4 space-y-4 font-medium md:hidden shadow-lg transition-all duration-300 ease-in-out"
  >
    <a href="#" class="hover:text-blue-700">¿Quiénes somos?</a>
    <a href="#" class="hover:text-blue-700">Servicios</a>
    <a href="#" class="hover:text-blue-700">WATPRO informa</a>
    <a href="#" class="hover:text-blue-700">Atención al público</a>
    <a href="#" class="hover:text-blue-700">Contacto</a>
  </div>
</header>

<!-- JS DEL MENÚ -->
<script>
  const btn = document.getElementById("btnMenu");
  const menu = document.getElementById("menu");

  if (btn && menu) {
    btn.addEventListener("click", () => {
      // Toggle del menú
      menu.classList.toggle("hidden");
      menu.classList.toggle("flex");

      // Animación del ícono hamburguesa
      const lines = btn.querySelectorAll("span");
      lines[0].classList.toggle("translate-y-[6px]");
      lines[0].classList.toggle("rotate-45");

      lines[1].classList.toggle("opacity-0");

      lines[2].classList.toggle("-translate-y-[6px]");
      lines[2].classList.toggle("-rotate-45");
    });
  }
</script>
